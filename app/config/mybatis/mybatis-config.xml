<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <settings>
        <!-- http://www.mybatis.org/mybatis-3/configuration.html -->
        <setting name="cacheEnabled" value="true"/>
        <setting name="lazyLoadingEnabled" value="false"/>
        <setting name="multipleResultSetsEnabled" value="true"/>
        <setting name="useColumnLabel" value="true"/>
        <setting name="useGeneratedKeys" value="false"/>
        <setting name="defaultExecutorType" value="SIMPLE"/>
        <setting name="defaultStatementTimeout" value="25000"/>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <setting name="jdbcTypeForNull" value="VARCHAR"/>
    </settings>

    <environments default="default">
        <environment id="default">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="mybatis/mappers/AccountMapper.xml"/>
        <mapper resource="mybatis/mappers/CategoryMapper.xml"/>
        <mapper resource="mybatis/mappers/ItemMapper.xml"/>
        <mapper resource="mybatis/mappers/LineItemMapper.xml"/>
        <mapper resource="mybatis/mappers/OrderMapper.xml"/>
        <mapper resource="mybatis/mappers/ProductMapper.xml"/>
        <mapper resource="mybatis/mappers/SequenceMapper.xml"/>
    </mappers>

</configuration>